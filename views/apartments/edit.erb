<form action="/apartments/<%= @apartment.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <input name="apartment[address]" type="text" value="<%=@apartment.address%>" placeholder="Address">
  <input name="apartment[monthly_rent]" type="text" value="<%=@apartment.monthly_rent%>" placeholder="Monthly Rent">
  <input name="apartment[sqft]" type="text" value="<%=@apartment.sqft%>" placeholder="Square Feet">
  <input name="apartment[num_beds]" type="text" value="<%=@apartment.num_beds%>" placeholder="Number Beds">
  <input name="apartment[num_baths]" type="text" value="<%=@apartment.num_baths%>" placeholder="Number Baths">

  <input type="submit" value="Update">
</form>

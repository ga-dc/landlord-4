<h2>Edit <%= @tenant.name.capitalize %></h2>

<form method="post" action="/tenants/<%= @tenant.id %>">
  <input type="hidden" name="_method" value="put">

  <label>Name:</label>
  <input name="tenant[name]" value="<%= @tenant.name %>">

  <label>Age:</label>
  <input name="tenant[age]" value="<%= @tenant.age %>">

  <label>Gender:</label>
  <input name="tenant[gender]" value="<%= @tenant.gender %>">

  <label>Apartment Id:</label>
  <input name="tenant[apartment_id]" value="<%= @tenant.apartment_id %>">

  <input type="submit" value="Edit Tenant">
</form>

<form method="post" action="/tenant/<%= @tenant.id %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

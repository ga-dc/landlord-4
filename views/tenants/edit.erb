<h2>Edit Tenant</h2>

  <form action="/tenants/<%= @tenant.id %>" method="post">
    <input type="hidden" name="_method" value="put">

    <label for="tenant[name]">Name:</label>
    <input name="tenant[name]" value="<%= @tenant.name %>">

    <label for="tenant[age]">Age:</label>
    <input name="tenant[age]" value="<%= @tenant.age %>">

    <label for="tenant[gender]">Gender:</label>
    <input name="tenant[gender]" value="<%= @tenant.gender %>">

    <label for="tenant[apartment_id]">Apartment ID:</label>
    <input name="tenant[apartment_id]" value="<%= @tenant.apartment_id %>">

    <input type="submit" value="Create">
</form>

<form action="/tenants/<%= @tenant.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="button-delete" type="submit" value="Delete!">
</form>
